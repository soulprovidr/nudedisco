    <script type="text/javascript">
      // Remove iframes in feed item descriptions.
      document.querySelectorAll("iframe").forEach((f) => f.parentNode.removeChild(f));
    </script>

    <script type="text/javascript">
      // Fade in images after they load.
      document.querySelectorAll("img.async-image").forEach((img) => {
        if (img.complete) {
          img.classList.add("loaded");
        } else {
          img.addEventListener("load", () => {
            img.classList.add("loaded");
          });
        }
      });
    </script>
