<% {feed, count} = feed_tuple %>

<%= if feed != nil && feed.items != nil do %>
<section>
  <h4><a href="<%= feed.site_url %>" target="_blank"><%= feed.name %></a></h4>
  <div class="row">
    <%= for item <- Enum.take(feed.items, count) do %>
      <div class="item cover column <%=feed.slug %>">
        <img
          class="async-image"
          loading="lazy"
          src="<%= item.image_url %>"
          width="100%"
        />
        <h5>
          <a href="<%= item.url %>" target="_blank">
            <%= item.title %>
          </a>
        </h5>
        <div><%= item.description %></div>
      </div>
    <% end %>
  </div>
</section>
<% end %>
